<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "mnBoard">
 <!-- select 로 게시글 조회, resultType에서 가져올 디비정보 dto (alias 별칭활용)  -->
 <!-- resultType 은 mybatis-config/alias에 설정한 dto 풀경로 별칭 -->
  <select id = "siBoardList" resultType = "typeBoardDto">   
  SELECT * FROM board ORDER BY board_no ASC
  </select>
  <!-- 검색창 구현 -->
  <select id = "siBoardSearch" resultType="typeBoardDto" parameterType="map">
  SELECT * FROM board WHERE instr(${type},#{keyword}) >0
  ORDER BY board_no ASC
  </select>
</mapper>